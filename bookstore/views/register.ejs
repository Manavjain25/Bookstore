<% include partials/header %>

<script>
        function myFunction() {
          var x = document.getElementById("pwd");
          if (x.type === "password") {
            x.type = "text";
          } else {
            x.type = "password";
          }
        }
</script>

<div class="container center_div">  
        <div class="col-sm-12"><h2 class="heading">Login</h2></div>
        <hr style="width:400px">
        </div>
      <div class="container center_div">
        <form action="/login" method="post">
            <div class="form-group">
                    <label for="usr">Username:</label>
                    <input type="text" class="form-control" id="usr" placeholder="Enter Username" name="username" required>
                    </div>
                
                      <div class="form-group">
                      <label for="pwd">Password:</label>
                      <input type="password" class="form-control" id="pwd" placeholder="Enter Password" name="password" required>
                      </div>
                    
                    <div class="form-group">
                    <input type="checkbox" onclick="myFunction()"><b>Show Password</b>
                    <button type="link" class="btn btn-link" style="width:170%;">Forget Password?</button>
                    </div>
                 <div class="form-group">
                    <button class="btn Button1 general">Submit</button>
                    </div>
        </form>
    </div>
    <div class="container center_div">
    <hr style="width:400px">
    </div>
    
    <div class="container center_div">
    <div class="col-sm-12 general"style="padding-right:60px">OR</div>
    <br><br>
    <button type="submit" class="btn btn-danger Button1 general">Google</button>
    <br><br>
    <button type="submit" class="btn btn-info Button1 general">Facebook</button>
    <br><br>
    <button type="link" class="btn btn-link" style="width:170%;">Don't have an account?</button>
